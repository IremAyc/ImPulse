<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background99"
    android:padding="20dp"
    android:weightSum="10"
    tools:context=".activities.LoginActivity">
    <TextView
        android:layout_weight="2"
        android:id="@+id/txtInfo1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="25dp"
        android:layout_marginBottom="50dp"
        android:text="@string/sign_in"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:textSize="20sp" />

    <EditText
        android:layout_weight="2"
        android:id="@+id/user_email_login_et"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/input_design"
        android:hint="Email Adresi"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:padding="12dp"
        android:textAllCaps="false"
        android:textSize="20sp"
        android:layout_below="@id/txtInfo1"
        android:inputType="textPersonName"
        />

    <EditText
        android:layout_weight="2"
        android:id="@+id/user_password_login_et"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Parola"
        android:layout_below="@+id/user_email_login_et"
        android:layout_marginTop="10dp"
        android:background="@drawable/input_design"
        android:inputType="textPassword"
        android:textStyle="bold"
        android:textColorHint="@color/gray"
        android:text="@string/login_email"
        android:textColor="@color/white"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:padding="12dp"
        android:textAllCaps="false"
        android:textSize="20sp" />
    <LinearLayout
        android:layout_weight="2"
        android:id="@+id/linear_layout_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/user_password_login_et"
        android:layout_marginTop="20dp">
       <CheckBox
           android:id="@+id/beni_hatırla"
           android:layout_marginTop="20dp"
           android:textColor="@color/white"
           android:gravity="center_vertical"
           android:textSize="18sp"
           android:textStyle="bold"
           android:layout_marginLeft="17dp"
           android:text="Beni Hatırla"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           />

        <TextView
            android:id="@+id/text_şifremiunuttum"
            android:layout_below="@id/user_password_login_et"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:textStyle="bold"
            android:gravity="center_vertical"
            android:layout_marginRight="17dp"
            android:text="Şifremi Unuttum?"
            android:textSize="18sp"
            android:layout_marginLeft="50dp"
            android:textColor="@color/white" />
    </LinearLayout>

    <Button
        android:layout_weight="2"
        android:id="@+id/button_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/input_design"
        android:text="@string/sign_in"
        android:textColor="@color/white"
        android:layout_below="@id/linear_layout_1"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:padding="15dp"
        android:textAllCaps="false"
        android:textSize="22sp"
        />

</RelativeLayout>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="10"
    android:background="@drawable/background111re"
    tools:context=".activities.RegisterActivity">

    <TextView
        android:layout_weight="1"
        android:id="@+id/txtInfo2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/create_new_account"
        android:textSize="20sp"
        android:layout_marginTop="25dp"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="10dp"
        android:textStyle="bold"
        android:textColor="@color/white"
        />
    <RelativeLayout
        android:layout_weight="2"
        android:id="@+id/linear_photo"
        android:layout_centerInParent="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/user_photo"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerInParent="true"
            android:background="@drawable/user" />

        <ImageView
            android:id="@+id/camera"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="250dp"
            android:layout_marginLeft="15dp"
            android:background="@drawable/camera_icon" />
    </RelativeLayout>
   <EditText
android:layout_weight="1"
android:id="@+id/user_name_register_et"
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:hint="Adı Soyadı"
android:layout_marginTop="10dp"
android:background="@drawable/input_design"
android:textColorHint="@color/white"
android:inputType="textPersonName"
android:layout_below="@id/linear_photo"
android:layout_marginLeft="12dp"
android:layout_marginRight="12dp"
android:textStyle="bold"
android:padding="12dp" />

<EditText
android:layout_weight="1"
android:id="@+id/user_email_register_et"
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:background="@drawable/input_design"
android:hint="Email Adresi"
android:layout_marginTop="10dp"
android:textStyle="bold"
android:inputType="textPersonName"
android:layout_below="@id/user_name_register_et"
android:padding="12dp"
android:layout_marginLeft="12dp"
android:layout_marginRight="12dp"
android:textColor="#fd7953"
android:textColorHint="@color/white"/>

<EditText
android:layout_weight="1"
android:id="@+id/user_password_register_et"
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:layout_below="@+id/user_email_register_et"
android:layout_marginTop="10dp"
android:textStyle="bold"
android:background="@drawable/input_design"
android:hint="Parola"
android:layout_marginLeft="12dp"
android:layout_marginRight="12dp"
android:inputType="textPassword"
android:padding="12dp"
android:textColor="#fd7953"
android:textColorHint="@color/white" />

<EditText
android:layout_weight="1"
android:id="@+id/user_birthday_register_et"
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:layout_below="@+id/user_password_register_et"
android:layout_marginTop="10dp"
android:background="@drawable/input_design"
android:ems="10"
android:textStyle="bold"
android:hint="D.Tarihi"
android:layout_marginLeft="12dp"
android:layout_marginRight="12dp"
android:inputType="textPassword"
android:padding="12dp"
android:textColor="#fd7953"
android:textColorHint="@color/white" />
<EditText
android:layout_weight="1"
android:id="@+id/user_seri_no_register_et"
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:layout_below="@+id/user_birthday_register_et"
android:layout_marginTop="10dp"
android:background="@drawable/input_design"
android:ems="10"
android:textStyle="bold"
android:layout_marginLeft="12dp"
android:layout_marginRight="12dp"
android:hint="Seri No"
android:inputType="textPassword"
android:padding="12dp"
android:textColor="#fd7953"
android:textColorHint="@color/white" />
<EditText
android:layout_weight="1"
android:id="@+id/user_seri_password_register_et"
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:layout_below="@+id/user_seri_no_register_et"
android:layout_marginTop="10dp"
android:background="@drawable/input_design"
android:ems="10"
android:textStyle="bold"
android:layout_marginLeft="12dp"
android:layout_marginRight="12dp"
android:hint="Şifre"
android:inputType="textPassword"
android:padding="12dp"
android:textColor="#fd7953"
android:textColorHint="@color/white" />

<Button
android:layout_weight="1"
android:id="@+id/btnRegisterLogin"
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:background="@drawable/input_design"
android:text="@string/create_account"
android:textColor="@color/white"
android:layout_below="@id/user_seri_password_register_et"
android:layout_marginTop="20dp"
android:layout_marginBottom="20dp"
android:layout_marginLeft="10dp"
android:layout_marginRight="10dp"
android:padding="15dp"
android:textAllCaps="false"
android:textSize="22sp"
    />
    </LinearLayout>



